{
    "compilerOptions": {
        "downlevelIteration": true,
        "maxNodeModuleJsDepth": 1,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "dist/",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "lib": [
            "esnext"
        ]
    },
    "include": [
        "./**/*.ts", "src/ssl/collect-csr.js"
    ]
  }